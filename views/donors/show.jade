h2.title=donor.name
.submenu
  ul
    li.edit
      a(href="/donors/edit/" + donor._id) Edit
    li.remove
      a.confirm(href="/donors/remove/" + donor._id) Remove
p
  label E-Mail
  span=donor.email
p
  label Birthday
  - if(donor.birthday != null)
    - var year = donor.birthday.getYear()
    span=donor.birthday.getMonth() + "/" + donor.birthday.getDay() + "/" + ((year <1000) ? year + 1900 : year);

p
  label Street
  span=donor.street
p
  label Town
  span=donor.town
p
  label Zip-Code
  span=donor.zipcode
p
  label Country
  span=donor.country

p
  label Personal Interests
  span=donor.personalInterests
p
  label Phone
  span=donor.telephone
p
  label Website
  span=donor.website
  
#posts!= partial('post', donor.communicationLog)
