h2.title= group.name
.submenu
  ul
    li.edit
      a(href="/groups/" + group._id + "/edit") Edit
    li.remove
      a.confirm(href="/groups/" + group._id + "/delete") Remove

.details
  .row
    label Description
    span=group.description
  .row
    label Owner
    - if (group.user)
      span=group.user.name

h3 Donors
table.display!= partial('donors/donor', group.donors)

.clear

#reminderMenu!= partial('remarks/_add',{remark:{}})

#postsMenu!= partial('posts/_form', {post:{}})  
#posts!= partial('posts/post', group.communicationLog)
