h2.title= group.name
.submenu
  ul
    li.edit
      a(href="/groups/edit/" + group._id) Edit
    li.remove
      a.confirm(href="/groups/remove/" + group._id) Remove
p
  label Description
  span=group.description
p
  label Owner
  span=group.user.name
  
h3 Donors
table.display
  thead
    tr
      th
        span Name
      th
        span Company
      th
        span E-Mail
      th
        span Telephone
  tbody!= partial('donors/donor', group.donors)
